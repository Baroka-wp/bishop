<img src="/banner.gif" class="img-fluid" alt="bishop banner">
<table class="table table-hover">
  <thead>
    <div class="text-center">
        <h3><%=@user.name %> NETWORK</h3>
    </div>
  </thead>
  <tbody>
    <tr>
      <% @user.following.each do |following| %>
       <td><%= image_tag following.avatar_thumbnail,style: 'height:30px;width:30px;' %>
        <%= link_to "#{following.name}", user_path(following.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
